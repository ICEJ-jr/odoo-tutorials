<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todo_list">
      <input type="text" t-ref="todo_input" id="todo-input" t-on-keyup="addTodo" placeholder="Enter a new task" />
      <t t-foreach="state.todos" t-as="todo" t-key="todo.id">
         <TodoItem todo="todo" toggleState.bind="toggleState" removeTodo.bind="removeTodo" />
      </t>
   </t>
</templates>